<table>
  <%
    half = (@people.count.to_f / 2).ceil
    (0..half-1).each do |i|
  %>
  <tr>
    <td class="name_box">
      <% inout = @people[i][1] %>
      <div class="status <%= inout %>">
        <%= inout %>
      </div>
      <div class="name">
        <%= @people[i][0] %>
        <img width="25" src="image/<%= URI.escape(@people[i][0]) %>"></img>
      </div>
    </td>
    <% if @people[i+half] %>
      <td class="name_box right">
      <% inout = @people[i + half][1] %>
      <div class="status <%= inout %>">
        <%= inout %>
      </div>
      <div class="name">
        <%= @people[i+half][0] %>
        <img width="25" src="image/<%= URI.escape(@people[i+half][0]) %>"></img>
      </div>
    </td>
  <% else %>
      <td class="name_box">
      <div class="status">&nbsp;</div>
      <div class="name">&nbsp;</div>
    </td>

  <% end %>
  </tr>
<% end %>
</table>
<table>
  <tbody>
  <tr>
    <td class="totalLabel">
      Total In:
    </td>
    <td class="totalCount">
      <div class="totalCountContainer"><%= @count %></div>
    </td>
  </tr>
  </tbody>
</table>
